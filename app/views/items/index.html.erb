<p id="notice"><%= notice %></p>

<h1>Items</h1>
<br>
<%= link_to '생성하기', new_item_path %>
<br><br>


<div class="column-box">
  <ul>
    <% @items.each do |item| %>
      <li>
        <div class="box">
          <div class="box-image">
            <a class="itemimage" href="<%= item_path(item.id) %>">
              <%= image_tag(item.image_url, id: 'item-image') %>
            </a>
          </div>
          <div class="box-body">
            <div class="box-content">
              <h5 class="box-title"><%= item.display_name %></h5>
              <strong><h5 class="box-title"><%= item.price %>원</h5></strong>
              <h6>리뷰개수 : <%= item.reviews_count %></h6>
              <h6>평점 : <%= item.rating_avg %></h6>
            </div>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>






<div class="index-container">
  <div class="row">
    <% @items.each do |item| %>
     <div class="col-md-4 col-xs-6">
      <div class="card">
        <div class="card-image">
          <a href="<%= item_path(item.id) %>">
            <%= image_tag(item.image_url, id: 'item-image') %>
          </a>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= item.display_name %></h5>
          <strong><h5 class="card-title"><%= item.price %>원</h5></strong>
          <h6>리뷰개수 : <%= item.reviews_count %></h6>
          <h6>평점 : <%= item.rating_avg %></h6>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
