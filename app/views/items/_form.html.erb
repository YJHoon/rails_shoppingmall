<%= form_with(model: item, local: true) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>
      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= form.label :image %><br>
    <%= form.file_field :image, accept: 'image/png,image/gif,image/jpeg' %>
  </div>

  <div class="field">
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :content %><br>
    <%= form.text_area :content %>
  </div>

  <div class="field">
    <%= form.label :price %><br>
    <%= form.number_field :price %>
  </div>
  
  <div class="field">
    <%= form.label :itemname %><br>
    <%= form.text_field :itemname %>
  </div>

  <div class="field">
    <%= form.label :number %><br>
    <%= form.number_field :number %><br>
  </div>

  <div class="actions">
    <%= form.submit%>
  </div>
<% end %>
