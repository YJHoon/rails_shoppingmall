<div class="item-show">
  <div class="show-image">
    <p>
      <strong>사진:</strong>
      <%= image_tag(@item.image_url, style:"width:200px;") %>
    </p>
  </div>
  
  <p class="star_rating">
    <a href="#" class="on">★</a>
    <a href="#" class="on">★</a>
    <a href="#" class="on">★</a>
    <a href="#">★</a>
    <a href="#">★</a>
  </p>
  <div class="show-content">
    <p>
      <strong>상품 이름:</strong>
      <%= @item.itemname %>
    </p>

    <p>
      <strong>상품 설명:</strong>
      <%= @item.item_explain %>
    </p>

    <p>
      <strong>가격:</strong>
      <%= number_to_currency(@item.price, unit: '₩') %>
    </p>

    <p>
      <strong>수량:</strong>
      <%= @item.quantity %>
    </p>

    <p>
      <strong>리뷰 개수:</strong>
      <%= @item.reviews_count %>
    </p>

    <p>
      <strong>리뷰 평균평점:</strong>
      <%= @item.rating_avg %>
    </p>

    <p>
      <strong>찜한 수:</strong>
      <%= @item.wishes.size %><br>
      <% if current_user.is_wish?(@item) %>
        <%= link_to "찜하기 취소", item_wish_path(@item), method: "post" %>
      <% else %>
        <%= link_to "찜하기", item_wish_path(@item), method: "post" %>
      <% end%>
    </p>
    <%= link_to 'Edit', edit_item_path(@item) %> |
    <%= link_to 'Destroy', @item, method: :delete, data: { confirm: 'Are you sure?' } %> |
    <%= link_to 'Back', items_path %>
  </div>
</div>


<div class="bd-example">
  <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
      <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <h1> 상품설명, 리뷰 이런거 할것</h1>
        <div class="carousel-caption d-none d-md-block">
          <h5>First </h5>
          <p>Nulla vitae elit libero, a pharetra augue mollis interdum.</p>
        </div>
      </div>
      <div class="carousel-item">
        <h2>2</h2>
        <div class="carousel-caption d-none d-md-block">
          <h5>Second slide label</h5>
          <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
        </div>
      </div>
      <div class="carousel-item">
        <h2>3</h2>
        <div class="carousel-caption d-none d-md-block">
          <h5>Third slide label</h5>
          <p>Praesent commodo cursus magna, vel scelerisque nisl consectetur.</p>
        </div>
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

<div class="review_content">
  <h4>리뷰 작성</h4>
  <%= link_to '리뷰 작성', new_item_review_path(@item) %>
  </div>

  <div class="show-review">
    <h4>리뷰</h4>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th scope="col" class="table1">닉네임</th>
            <th scope="col" class="table2">리뷰내용</th>
            <th scope="col" class="table3">평점</th>
            <th scope="col" class="table3">삭제</th>
          </tr>
        </thead>
        <% @reviews.each do |review| %>
        <tbody>
          <tr>
            <td><%= review.user.email %></td>
            <td><%= review.body %></td>
            <td><%= review.rating %></td>
            <td><%= link_to('삭제', item_review_path(@item, review), method: :delete) %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
  </div>
</div>
<style>
$( ".star_rating a" ).click(function() {
     $(this).parent().children("a").removeClass("on");
     $(this).addClass("on").prevAll("a").addClass("on");
     return false;
});

</style>